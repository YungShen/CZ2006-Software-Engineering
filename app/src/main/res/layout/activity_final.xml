<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".FinalActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/FinalToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:menu="@menu/menu_final" />

        <fragment
        android:id="@+id/fragment2"
        android:name="com.example.myapplication.PhotoList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/DirectionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/button_direction" />

        <Button
            android:id="@+id/ReservationButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/button_reservation" />
    </LinearLayout>

    <include
        layout="@layout/restaurant_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
