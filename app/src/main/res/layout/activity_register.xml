<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorInput"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".RegisterActivity">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/Intro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20sp"
        android:gravity="center_horizontal"
        android:text="Sign up to see all your nearby restaurants."
        android:textSize="22sp"
        android:textStyle="bold|italic" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/EmailField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <EditText
            android:id="@+id/Email"
            android:layout_width="321dp"
            android:layout_height="37dp"
            android:background="#FAF9F9"
            android:drawableStart="@drawable/ic_person_outline_white_24dp"
            android:drawableLeft="@drawable/ic_person_outline_white_24dp"
            android:hint="Email Address"
            android:inputType="textEmailAddress"
            android:padding="5dp"
            android:textColor="#6A6969"
            android:textColorHint="@color/colorHint"
            android:textSize="22sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/PasswordField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/Password"
            android:layout_width="321dp"
            android:layout_height="37dp"
            android:background="#FAF9F9"
            android:drawableStart="@drawable/ic_lock_outline_white_24dp"
            android:drawableLeft="@drawable/ic_lock_outline_white_24dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="5dp"
            android:textColor="#6A6969"
            android:textColorHint="@color/colorHint"
            android:textSize="22sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/RetypePasswordField"
        android:layout_width="321dp"
        android:layout_height="49dp"
        android:layout_margin="10dp">

        <EditText
            android:id="@+id/RetypePassword"
            android:layout_width="321dp"
            android:layout_height="37dp"
            android:background="#FAF9F9"
            android:drawableLeft="@drawable/ic_lock_outline_white_24dp"
            android:hint="Retype Password"
            android:inputType="textPassword"
            android:padding="5dp"
            android:textColor="#6A6969"
            android:textColorHint="@color/colorHint"
            android:textSize="22sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/RegisterButton"
        android:layout_width="330dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:background="#405DE6"
        android:text="@string/register"
        android:textColor="@color/colorInput"
        android:textSize="16sp" />

    <Button
        android:id="@+id/LoginButton"
        android:layout_width="330dp"
        android:layout_height="45dp"
        android:background="@color/colorInput"
        android:text="Back to login"
        android:textColor="#405DE6"
        android:textSize="16sp" />

</LinearLayout>